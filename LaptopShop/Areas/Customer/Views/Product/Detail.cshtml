
@using LaptopShop.Models.ViewModels;
@model LaptopShop.Models.EF.Product

@{
    List<ProductDto> list = ViewBag.list;
}


<div class="section">
    <!--container-->
    <div class="container">
        <div class="row">
            <!--Product main img-->
            <div class="col-md-5 col-md-push-2">
                <div id="product-main-img">
                    <div class="product-preview">
                        <img src="@Url.Content(Model.Image)" alt="">
                    </div>  
                    <div class="product-preview">
                        <img src="@Url.Content(Model.Image)" alt="">
                    </div>
                    <div class="product-preview">
                        <img src="@Url.Content(Model.Image)" alt="">
                    </div>
                    <div class="product-preview">
                        <img src="@Url.Content(Model.Image)" alt="">
                    </div>
                </div>
            </div>
            <!-- /Product main img -->
            <!-- Product thumb imgs -->
            <div class="col-md-2  col-md-pull-5">
                <div id="product-imgs">
                    <div class="product-preview">
                        <img src="@Url.Content(Model.Image)" alt="">
                    </div>
                    <div class="product-preview">
                        <img src="@Url.Content(Model.Image)" alt="">
                    </div>
                    <div class="product-preview">
                        <img src="@Url.Content(Model.Image)" alt="">
                    </div>
                    <div class="product-preview">
                        <img src="@Url.Content(Model.Image)" alt="">
                    </div>
                </div>
            </div>
            <!-- /Product thumb imgs -->
            <!-- Product details -->
            <div class="col-md-5">
                <div class="product-details">
                    <h2 class="product-name">@Html.DisplayFor(model => model.Name)</h2>
                    <div>
                        <h3 class="product-price">@Model.Price.ToString("0,0")đ<del class="product-old-price"> 46.600.000đ</del></h3>
                    </div>
                    <p>Màn hình: @Html.DisplayFor(model=>model.Monitor)</p>
                    <p>CPU: @Html.DisplayFor(model=>model.CPU)</p>
                    <p>RAM: @Html.DisplayFor(model=>model.RAM)</p>
                    <p>Ổ cứng: @Html.DisplayFor(model=>model.Storage)</p>
                    <p>Đồ họa: @Html.DisplayFor(model=>model.Graphics)</p>
                    <div class="product-options">
                        <label>
                            Màu sắc
                            <select class="input-select" style="width: auto">
                                <option value="0">@Html.DisplayFor(model=>model.Color)</option>
                            </select>
                        </label>
                    </div>

                    <div class="add-to-cart">
                        <a class="btn btn-primary" asp-controller="Cart" asp-action="Add" asp-route-id="@Model.ProductId">Thêm vào giỏ hàng</a>
                    </div>
                </div>
            </div>
            <!-- /Product details -->
        </div>
    </div>
</div>

